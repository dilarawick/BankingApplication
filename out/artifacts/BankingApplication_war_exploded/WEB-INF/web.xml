<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
            https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>BankingApplication</display-name>

    <!-- servlet declarations -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupVerifyServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.SignupVerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupVerifyServlet</servlet-name>
        <url-pattern>/signup-verify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCredentialsServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.CreateCredentialsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCredentialsServlet</servlet-name>
        <url-pattern>/create-credentials</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePasswordVerifyServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.ChangePasswordVerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordVerifyServlet</servlet-name>
        <url-pattern>/change-password-verify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.bankapp.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- welcome -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
